<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comprehensive_navigation"
    app:startDestination="@id/personalInformationFragment">

    <fragment
        android:id="@+id/vehicleDetailsFragment"
        android:name="com.example.claimchapchap.insurancePolicies.comprehensive.VehicleDetailsFragment"
        android:label="fragment_comprehensive_vehicle_details"
        tools:layout="@layout/fragment_comprehensive_vehicle_details" >
        <action
            android:id="@+id/action_vehicleDetailsFragment_to_coverFragment"
            app:destination="@id/coverFragment" />
    </fragment>

    <fragment
        android:id="@+id/coverFragment"
        android:name="com.example.claimchapchap.insurancePolicies.comprehensive.CoverFragment"
        android:label="fragment_comprehensive_cover"
        tools:layout="@layout/fragment_comprehensive_cover" >
        <action
            android:id="@+id/action_coverFragment_to_quoteFragment2"
            app:destination="@id/quoteFragment" />
    </fragment>

    <fragment
        android:id="@+id/quoteFragment"
        android:name="com.example.claimchapchap.insurancePolicies.comprehensive.QuoteFragment"
        android:label="fragment_comprehensive_quote"
        tools:layout="@layout/fragment_comprehensive_quote" >
        <action
            android:id="@+id/action_quoteFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>

    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.example.claimchapchap.insurancePolicies.comprehensive.PaymentFragment"
        android:label="fragment_comprehensive_payment"
        tools:layout="@layout/fragment_comprehensive_payment" />
    <fragment
        android:id="@+id/personalInformationFragment"
        android:name="com.example.claimchapchap.insurancePolicies.comprehensive.PersonalInformationFragment"
        android:label="fragment_comprehensive_personal_information"
        tools:layout="@layout/fragment_comprehensive_personal_information" >
        <action
            android:id="@+id/action_personalInformationFragment_to_vehicleDetailsFragment"
            app:destination="@id/vehicleDetailsFragment" />
    </fragment>

</navigation>